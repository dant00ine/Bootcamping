<h1>Login</h1>
<%= form_for :session, url: login_path do |f| %>
	
	<div class="form-group">
		<%= f.label :email %>
		<%= f.email_field :email %>
	</div>

	<div class="form-group">
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>

	<div class="form-group">
		<%= f.label :remember_me do %>
			<%= f.check_box :remember_me %>
			<span>Remember me on this computer</span>
		<% end %>
	</div>

	<div class="form-group">
		<%= f.submit 'Login' %>
	</div>
<% end %>
