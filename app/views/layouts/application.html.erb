<!DOCTYPE html>
<html>
<head>
  <title>Bootcamping</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


    <% flash.each do |k,v| %>
        <%= content_tag :div, v, class: "alert alert-#{k} text-center" %>
    <% end %>


      

  <ul>
      <li> <%= link_to 'HOME', root_path %> </li> 
      <li> <%= link_to 'Bootcamps', bootcamps_path %> </li> 
      
    <% if logged_in? %>
      <li> <%= link_to "#{current_user.nickname}", current_user %> </li>
          <li> <%= link_to 'Log out', log_out%> </li> 
        <% else %>
          <%= form_for :session, url: login_path do |f| %>
              <%= f.email_field :email %>
              <%= f.password_field :password %>
              <%= f.submit %>
          <% end %>
          <li> <%= link_to 'Register', :new_user  %> </li>
    <% end %>
    </ul>


    <div class="container">
        <%= yield %>
    </div>

    <div class="well" style='margin-top: 250px'>
      <%= debug(params) if Rails.env.development? %>
    </div>
</body>
</html>
