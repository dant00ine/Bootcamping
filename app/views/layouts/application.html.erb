<!DOCTYPE html>
<html>
<head>
  <title>Bootcamping</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


    <% flash.each do |k,v| %>
        <%= content_tag :div, v, class: "alert alert-#{k} text-center" %>
    <% end %>

    <div class="container">
        <div class="well">
          <div class="row">
            <div class="col-md-12">
          <div class="col-md-6">
          <h5> Sign Up</h5>
            <%= form_for :user, url: users_path do |f| %>
                Email:    <%= f.email_field :email %><br>
                password: <%= f.password_field :password %><br>
                password_confirmation: <%= f.password_field :password_confirmation %><br>
                <%= f.submit 'Sign Up' %>                
            <% end %>
          </div>
          <div class="col-md-6">
            <h5> Sign In</h5>

              <%= form_for :session, url: login_path do |f| %>
                  email: <%= f.email_field :email %><br>
                  password: <%= f.password_field :password %>
                  <%= f.check_box :remember_me %>
                  <%= f.submit "Login" %>
              <% end %>

          </div>
          </div>
        </div>
        </div>
        <% if logged_in? %>
  <%= link_to "Home", root_path %>
  <%= link_to "Bootcamps", bootcamps_path %>
  <%= current_user.email %>
  <%= link_to "Log Out", logout_path %>
<% else %>
<h1>You are not logged in !!!</h1>
<% end %>
        <%= yield %>
    </div>

    <div class="well" style='margin-top: 250px'>
      <%= debug(params) if Rails.env.development? %>
    </div>
</body>
</html>
