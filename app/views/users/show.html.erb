<div class="row">
	<hr>
	<div class="col-md-6">
	<% unless @user.profile.nil? %>
		<h1><%= "#{@user.profile.first_name} #{@user.profile.last_name} " %></h1>
		<p><%= image_tag(@user.profile.image) %></p>
		<p><%= @user.profile.first_name %></p>
		<p><%= @user.profile.last_name %></p>
		<p><%= @user.profile.contact_phone %></p>
		<p><%= @user.profile.contact_email %></p>
		<p><%= link_to "http://www.#{@user.profile.contact_website}", "http://#{@user.profile.contact_website}", :target => "_blank" unless @user.profile.contact_website.nil? %></p>
		<hr>
		
	<%= link_to 'Update Profile', edit_user_path(@user), class: "btn btn-success" if current_user?(@user) %>
		
	<% end %>
	</div>

	<% unless @user.profile.nil? %>
		<% if @user.profile.profession_id == 1%>
		<div class="col-md-6">
			<h1> Bootcamp </h1>
				<% unless @user.profile.bootcamps.empty? %>
					<% @user.profile.bootcamps.each do |b| %>
						<p><%= b.title %></p>
					<% end %>
				<% else %>
					<% if current_user?(@user) %>
						<h4>Please Choose Your Bootcamp School</h4>
					<% else %>
						<h4>This User has not gone to Bootcamps</h4>
					<% end %>
				<% end %>
		</div>
		<% end %>
	<% end %>
</div>	
