<p id="notice"><%= notice %></p>


  <!-- Basic Search City -->
    <%= form_tag bootcamps_path, method: :get do %>
        <div class="form-group">
            <%= label_tag :city %>
            <%= collection_select(:search, :location_id, Location.all, :id, :title) %>
            <%#= collection_select(:speciality_id, Speciality.all, :id, :title) %>
            <%=  submit_tag 'Search', name: nil %>
        </div>
    <% end %>
    <hr>
  <!-- Advanced Search -->
    <form action="bootcamps" method='get'>
        <div class="form-group">
            <label>Bootcamp Title</label>
            <input type='text' name='search[title]' placeholder="Bootcamp Name">
        </div>

        <div class="form-group">
            <label>Job Guarantee</label>
            <select class='' name='search[job_guarantee]' >
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
        </div>

        <div class="form-group">
            <label>Job Assistance</label>
            <select class='' name='search[job_assistance]'>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
        </div>

        <div class="form-group">
            <label>Housing</label>
            <select class='' name='search[housing]'>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
        </div>

        <div class="form-group">
            <label>Visa Assistance</label>
            <select class='' name='search[visa_assistance]'>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
        </div>

        <div class="form-group">

        </div>


        <button type='submit' class='btn btn-default btn-large'> Search </button>
    </form>


<% unless params[:search].present? %>
  <%= will_paginate %>
<% end %>

<%= link_to 'New Bootcamp', new_bootcamp_path %>
<h1>Listing Bootcamps</h1>
<table>
  <thead>
    <tr>
      <th colspan="3">Title</th>
      <th> SPACE: </th>
      <th colspan="3"> ACtion</th>
    </tr>
  </thead>
  
  <tbody>
    <% @bootcamps.each do |bootcamp| %>
      <tr>

        <td colspan="3"> <%= link_to bootcamp.title, bootcamp %> |
          <span class='star-reviewing' data-score=<%= rating_average(bootcamp) %>> </span>
        </td>
        <td></td>
        <% if bootcamp_owner?(bootcamp) || current_user.admin %>
          <td><%= link_to 'Edit', edit_bootcamp_path(bootcamp) %> |</td>
          <td>| <%= link_to 'Destroy', bootcamp, method: :delete, data: { confirm: 'Are you sure?' } if current_user.admin %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<script>
  $('.star-reviewing').raty({
   path: '/assets/stars',
   readOnly: true,
   score: function(){
    return $(this).attr('data-score');
   }
 });
</script>

