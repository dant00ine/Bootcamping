    <div class="col-md-12">
      <hr>
          <%= form_for ([@bootcamp, BootcampComment.new]) do |f| %>
          <div class="form-group">
              <%= f.label :comment %>
              <%= f.text_field :body %>
          </div>
              <%= f.submit 'add Comment' %>
          <% end %>

        <hr> <h3>Comments</h3>
        <% @bootcamp.bootcamp_comments.each do |c| %>
          <%= div_for c do %>
            <p><%= c.body %></p>
          <% end %>  
        <% end %>
    </div>


    <div class="col-md-12">
      <hr> <h3 class='star-reviewing' data-score=<%= rating_average(@bootcamp) %>> <%= @bootcamp.title %> Review Avg: </h3>

          <%= form_for ([@bootcamp, BootcampReview.new]) do |f| %>
              <div id="star-reviewing"></div>
              <button type='submit' id="add_review"> add it !</button>
          <% end %>
          <hr width="80%">
          <% @bootcamp.bootcamp_reviews.each do |r| %>
            <div class='star-reviewing' data-score=<%= r.review %> ></div>
          <% end %>
    </div>
